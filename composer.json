{
    "name": "chalasr/capistrano-bundle",
    "description": "Symfony/console command that provide automation of your deployment workflow on top of Capistrano.",
    "keywords": ["deploy", "bundle", "symfony2", "capistrano", "capifony", "production", "workflow"],
    "type": "symfony-bundle",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Robin CHALAS",
            "email": "robin.chalas@gmail.com",
            "homepage": "https://github.com/chalasr/RCHCapistranoBundle"
        }
    ],
    "require": {
        "php": ">=5.3.9",
        "symfony/console": "~2.4|~3.0",
        "symfony/filesystem": "~2.4|~3.0",
        "symfony/yaml": "~2.4|~3.0",
        "symfony/dependency-injection": "~2.4|~3.0",
        "symfony/config": "~2.4|~3.0"
    },
    "autoload":     {
        "psr-0": { "RCH\\CapistranoBundle": "" }
    },
    "target-dir": "RCH/CapistranoBundle",
    "require-dev": {
        "fabpot/php-cs-fixer": "^1.11"
    }
}
